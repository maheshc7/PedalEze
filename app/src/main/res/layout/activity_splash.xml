<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/on_boarding_bg"
    tools:showIn="@layout/activity_splash">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:alpha="1"
        android:background="@drawable/intor_screen_card" />

    <LinearLayout
        android:id="@+id/layoutDots"

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:gravity="left"
        android:orientation="horizontal"
        android:paddingLeft="50dp"></LinearLayout>

    <ImageButton
        android:id="@+id/btn_next"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/arrow"

        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_pedal"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/gradient"
        android:text="LET'S PEDALEZE"
        android:textColor="#fff" />


