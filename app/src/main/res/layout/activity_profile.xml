            android:layout_height="wrap_content"
            android:layout_marginEnd="36dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto"
            android:text="Weight"
            android:textColor="@color/fg_text"
            app:layout_constraintEnd_toEndOf="parent"
